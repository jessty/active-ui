{
  "name": "active-ui",
  "version": "1.0.11",
  "description": "A powerful Vue.js 2.0 UI Toolkit for Web",
  "main": "dist/ActiveUI.min.js",
  "author": "Ivan Warke",
  "license": "MIT",
  "dependencies": {
    "velocity-animate": "^1.5.0",
    "vue-focus": "^2.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JanvierCheng/active-ui"
  },
